<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- Set jsp pageEncoding -->
    <jsp-config>
        <jsp-property-group>
            <description>html encoding example</description>
            <display-name>JSPConfiguration</display-name>
            <url-pattern>*.html</url-pattern>
            <el-ignored>true</el-ignored>
            <page-encoding>UTF-8</page-encoding>
            <scripting-invalid>false</scripting-invalid>
            <include-prelude></include-prelude>
            <include-coda></include-coda>
        </jsp-property-group>
    </jsp-config>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>InitServlet</servlet-name>
        <servlet-class>controller.InitServlet</servlet-class>
        <init-param>
            <param-name>dbDriver</param-name>
            <param-value>com.mysql.jdbc.Driver</param-value>
        </init-param>
        <init-param>
            <param-name>dbUrl</param-name>
            <param-value>jdbc:mysql://localhost:3306/mysql</param-value>
        </init-param>
        <init-param>
            <param-name>dbUserName</param-name>
            <param-value>Cloud</param-value>
        </init-param>
        <init-param>
            <param-name>dbPassword</param-name>
            <param-value>2333</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>UserLoginFilter</filter-name>
        <filter-class>controller.user.UserLoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UserLoginFilter</filter-name>
        <url-pattern>/user/*</url-pattern>
    </filter-mapping>
    
    <servlet>
        <servlet-name>UserIndexServlet</servlet-name>
        <servlet-class>controller.user.UserIndexServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserIndexServlet</servlet-name>
        <url-pattern>/user/index</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserLogoutServlet</servlet-name>
        <servlet-class>controller.user.UserLogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserLogoutServlet</servlet-name>
        <url-pattern>/user/logout</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>UserRechargeServlet</servlet-name>
        <servlet-class>controller.user.UserRechargeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserRechargeServlet</servlet-name>
        <url-pattern>/user/accountRecharge</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserModifyPasswordServlet</servlet-name>
        <servlet-class>controller.user.UserModifyPasswordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserModifyPasswordServlet</servlet-name>
        <url-pattern>/user/modifyPassword</url-pattern>
    </servlet-mapping>


</web-app>